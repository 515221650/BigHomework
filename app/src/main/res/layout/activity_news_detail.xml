<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsDetailActivity"
    android:orientation="vertical"
    android:paddingTop="40dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="30dp">
        <TextView
            android:id="@+id/tv_newsdetail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TITLE"
            android:textSize="35sp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:id="@+id/tv_newsdetail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tv_newsdetail_title"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_newsdetail_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOURCE"
                android:textColor="@color/garyDark"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/tv_newsdetail_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="17sp"
                android:text="2020-9-4 21:00"
                android:textColor="@color/garyDark"
                android:paddingRight="20dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_newsdetail_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_newsdetail_layout"
            android:layout_marginTop="10dp"
            android:paddingTop="20dp"
            android:lineSpacingMultiplier="1.5"
            android:textSize="20dp"
            android:text="这是正文这是正文这是正文这是正文这是正文这是正文这是正文这是正文这是正文这是正文这是正文这是正文"
            android:textColor="@color/black"/>
    </RelativeLayout>
</ScrollView>