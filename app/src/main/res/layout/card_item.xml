<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/gray"
        app:cardElevation="20dp"
        app:cardMaxElevation="10dp"
        app:contentPaddingLeft="10dp"
        app:contentPaddingTop="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:dividerPadding="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/keyword1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/keyword_tab"
                    android:text="hello"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_marginBottom="@dimen/keyword_bottom"
                    />
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="@dimen/hot_width"
                    android:layout_height="@dimen/hot_width"
                    android:layout_gravity="center"
                    android:background="@mipmap/hot"/>
                <TextView
                    android:id="@+id/hotnumber1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="123123"
                    android:textColor="@color/garyDark"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/keyword2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/keyword_tab"
                    android:text="hello"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:layout_marginBottom="@dimen/keyword_bottom"
                    />
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="@dimen/hot_width"
                    android:layout_height="@dimen/hot_width"
                    android:layout_gravity="center"
                    android:background="@mipmap/hot"/>
                <TextView
                    android:id="@+id/hotnumber2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="123123"
                    android:textColor="@color/garyDark"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/keyword3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/keyword_tab"
                    android:text="hello"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    />
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_width="@dimen/hot_width"
                    android:layout_height="@dimen/hot_width"
                    android:layout_gravity="center"
                    android:background="@mipmap/hot"/>
                <TextView
                    android:id="@+id/hotnumber3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="123123"
                    android:textColor="@color/garyDark"/>
            </LinearLayout>
            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="title1"/>
            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title2"/>
            <TextView
                android:id="@+id/title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击查看更多"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>