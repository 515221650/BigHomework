<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_knowledge_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.5">
            <TextView
                android:id="@+id/expert_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="NAME"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="2dp"
                >
            </TextView>
            <TextView
                android:id="@+id/expert_en_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Nan shanzhong"
                android:textColor="@color/garyDark"/>
            <LinearLayout
                android:id="@+id/expert_index"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/index_h"
                    android:textColor="@color/white"
                    android:text="H"
                    android:textSize="15sp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"/>
                <TextView
                    android:id="@+id/index_h"
                    android:layout_width="35dp"
                    android:paddingLeft="3dp"
                    android:textSize="@dimen/number_size"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:text="21323"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/index_a"
                    android:textColor="@color/white"
                    android:text="A"
                    android:textSize="15sp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"/>
                <TextView
                    android:id="@+id/index_a"
                    android:layout_width="35dp"
                    android:paddingLeft="3dp"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/number_size"
                    android:layout_height="wrap_content"
                    android:text="213"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/index_s"
                    android:textColor="@color/white"
                    android:text="S"
                    android:textSize="15sp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"/>
                <TextView
                    android:id="@+id/index_s"
                    android:layout_width="35dp"
                    android:paddingLeft="3dp"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/number_size"
                    android:layout_height="wrap_content"
                    android:text="213"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/index_c"
                    android:textColor="@color/white"
                    android:text="C"
                    android:textSize="15sp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"/>
                <TextView
                    android:id="@+id/index_c"
                    android:layout_width="35dp"
                    android:paddingLeft="3dp"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/number_size"
                    android:layout_height="wrap_content"
                    android:text="213"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/index_p"
                    android:textColor="@color/white"
                    android:text="P"
                    android:textSize="15sp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"/>
                <TextView
                    android:id="@+id/index_p"
                    android:layout_width="35dp"
                    android:paddingLeft="3dp"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/number_size"
                    android:layout_height="wrap_content"
                    android:text="213"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/university"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/affiliation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/search_hint"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bio: "
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.3"
            android:paddingLeft="3dp"
            android:text="@string/example_text"
            android:textSize="@dimen/content_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edu: "
            android:textSize="30sp" />

        <TextView
            android:id="@+id/edu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.3"
            android:paddingLeft="3dp"
            android:text="@string/example_text"
            android:textSize="@dimen/content_size" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work:"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.3"
            android:paddingLeft="3dp"
            android:text="@string/example_text"
            android:textSize="@dimen/content_size" />
    </LinearLayout>
</LinearLayout>